@model ApplicationBlog.UI.Models.Post.NewPostModel

<h1>Create New Post</h1>

<form asp-action="AddPost" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>

        
    </div>

        <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>

    </div>
  <label class="btn btn-default btn-file">
                            Browse <input asp-for="ImageUpload" type="file" />
                        </label>
    <span asp-validation-for="ImageUpload" class="text-danger"></span>
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Submit Post</button>
    <input asp-for="CategorieId" type="hidden" />
    <input asp-for="Created" type="hidden" />

</form>